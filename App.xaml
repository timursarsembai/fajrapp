<Application x:Class="FajrApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Global font -->
            <FontFamily x:Key="DefaultFont">Segoe UI Variable, Segoe UI</FontFamily>
            
            <!-- Colors -->
            <Color x:Key="AccentColor">#0078D4</Color>
            <Color x:Key="BackgroundColor">#202020</Color>
            <Color x:Key="ForegroundColor">#FFFFFF</Color>
            
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
            <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
