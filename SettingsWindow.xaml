<Window x:Class="FajrApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ÐÐ°ÑÑ‚Ñ€Ð¾Ð¹ÐºÐ¸ - FajrApp"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
        
        <!-- Dark ComboBox Item Style -->
        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItem}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1" 
                                                      Data="M0,0 L4,4 L8,0" 
                                                      Fill="#808080" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"
                                                      StrokeThickness="0"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Margin="10,6,26,6"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder"
                                        Background="#2D2D2D"
                                        BorderBrush="#3D3D3D"
                                        BorderThickness="1"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer>
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable, Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#3D3D3D"/>
        </Style>
        
        <!-- Tab Button Style (Dark Theme) -->
        <Style x:Key="TabButtonStyleDark" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,3,0"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2D2D2D"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="Border" Property="Background" Value="#2D2D2D"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Tab Button Style (Light Theme) -->
        <Style x:Key="TabButtonStyleLight" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0,0,3,0"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="Tag" Value="Selected">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Default Tab Button Style (for initial load) -->
        <Style x:Key="TabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyleDark}"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Menu -->
        <Border Grid.Column="0" Background="#252525" BorderBrush="#3D3D3D" BorderThickness="0,0,1,0">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="âš™ï¸ Settings" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Margin="16,16,16,24"
                           Foreground="#E0E0E0"/>
                
                <!-- Tab Buttons -->
                <Button x:Name="LanguageTabButton" 
                        Style="{StaticResource TabButtonStyle}"
                        Content="ðŸŒ Language"
                        Click="TabButton_Click"
                        Tag="Selected"/>
                
                <Button x:Name="LocationTabButton" 
                        Style="{StaticResource TabButtonStyle}"
                        Content="ðŸ“ Location"
                        Click="TabButton_Click"/>
                
                <Button x:Name="MethodTabButton" 
                        Style="{StaticResource TabButtonStyle}"
                        Content="ðŸ•Œ Calculation"
                        Click="TabButton_Click"/>
                
                <Button x:Name="OffsetsTabButton" 
                        Style="{StaticResource TabButtonStyle}"
                        Content="â±ï¸ Time Offsets"
                        Click="TabButton_Click"/>
                
                <Button x:Name="NotificationsTabButton" 
                        Style="{StaticResource TabButtonStyle}"
                        Content="ðŸ”” Notifications"
                        Click="TabButton_Click"/>
                
                <Button x:Name="AppearanceTabButton" 
                        Style="{StaticResource TabButtonStyle}"
                        Content="ðŸŽ¨ Appearance"
                        Click="TabButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Content Panel -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ContentPanel" Margin="24">
                    <!-- Content will be populated dynamically -->
                </StackPanel>
            </ScrollViewer>
            
            <!-- Hidden controls referenced by code -->
            <Grid Visibility="Collapsed">
                <TextBlock x:Name="LanguageSectionHeader"/>
                <TextBlock x:Name="LanguageLabel" Text="Language"/>
                <ComboBox x:Name="LanguageComboBox" SelectionChanged="LanguageComboBox_SelectionChanged"/>
                
                <TextBlock x:Name="LocationSectionHeader"/>
                <TextBlock x:Name="CityLabel" Text="City"/>
                <TextBox x:Name="CityTextBox" KeyDown="CityTextBox_KeyDown"/>
                <Button x:Name="SearchButton" Content="ðŸ” Search" Click="SearchCity_Click"/>
                <ListBox x:Name="CityResultsListBox" Visibility="Collapsed" SelectionChanged="CityResultsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" Foreground="#E0E0E0"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button x:Name="FindLocationButton" Content="ðŸ“ Find my location" Click="FindLocation_Click"/>
                <TextBlock x:Name="StatusText"/>
                <TextBlock x:Name="LatitudeLabel" Text="Latitude"/>
                <TextBox x:Name="LatitudeTextBox"/>
                <TextBlock x:Name="LongitudeLabel" Text="Longitude"/>
                <TextBox x:Name="LongitudeTextBox"/>
                
                <TextBlock x:Name="MethodSectionHeader"/>
                <TextBlock x:Name="MethodLabel" Text="Calculation Method"/>
                <ComboBox x:Name="MethodComboBox"/>
                <TextBlock x:Name="AsrMethodLabel" Text="Asr Calculation"/>
                <ComboBox x:Name="AsrMethodComboBox">
                    <ComboBoxItem x:Name="AsrStandardItem" Content="Standard (Shafi, Maliki, Hanbali)" Tag="0"/>
                    <ComboBoxItem x:Name="AsrHanafiItem" Content="Hanafi" Tag="1"/>
                </ComboBox>
                
                <TextBlock x:Name="OffsetsSectionHeader"/>
                <TextBlock x:Name="FajrLabel" Text="Fajr"/>
                <TextBox x:Name="FajrOffsetTextBox"/>
                <TextBlock x:Name="SunriseLabel" Text="Sunrise"/>
                <TextBox x:Name="SunriseOffsetTextBox"/>
                <TextBlock x:Name="DhuhrLabel" Text="Dhuhr"/>
                <TextBox x:Name="DhuhrOffsetTextBox"/>
                <TextBlock x:Name="AsrLabel" Text="Asr"/>
                <TextBox x:Name="AsrOffsetTextBox"/>
                <TextBlock x:Name="MaghribLabel" Text="Maghrib"/>
                <TextBox x:Name="MaghribOffsetTextBox"/>
                <TextBlock x:Name="IshaLabel" Text="Isha"/>
                <TextBox x:Name="IshaOffsetTextBox"/>
                
                <TextBlock x:Name="NotificationsSectionHeader"/>
                <CheckBox x:Name="NotificationsEnabledCheckBox" Content="Enable notifications"/>
                <TextBlock x:Name="NotificationSoundLabel" Text="Notification sound"/>
                <ComboBox x:Name="NotificationSoundComboBox">
                    <ComboBoxItem x:Name="SoundNoneItem" Content="None" Tag="0"/>
                    <ComboBoxItem x:Name="SoundSystemItem" Content="System sound" Tag="1"/>
                    <ComboBoxItem x:Name="SoundAzanItem" Content="Azan" Tag="2"/>
                </ComboBox>
                <TextBlock x:Name="AzanHintText" Text="ðŸ’¡ To use Azan, add azan.mp3 and azan_fajr.mp3 files to the Sounds folder"/>
                <Button x:Name="OpenSoundsFolderButton" Content="ðŸ“ Open Sounds folder" Click="OpenSoundsFolder_Click"/>
                
                <TextBlock x:Name="AppearanceSectionHeader"/>
                <TextBlock x:Name="ThemeLabel" Text="Theme"/>
                <ComboBox x:Name="ThemeComboBox">
                    <ComboBoxItem x:Name="ThemeLightItem" Content="Light" Tag="0"/>
                    <ComboBoxItem x:Name="ThemeDarkItem" Content="Dark" Tag="1"/>
                </ComboBox>
                <TextBlock x:Name="OpacityLabel" Text="Widget opacity"/>
                <TextBlock x:Name="OpacityValueText" Text="100%"/>
                <Slider x:Name="OpacitySlider"
                        Minimum="30"
                        Maximum="100"
                        Value="100"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        ValueChanged="OpacitySlider_ValueChanged"/>
            </Grid>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        Margin="24,16,24,24">
                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Style="{StaticResource SecondaryButton}"
                        Click="CancelButton_Click"
                        Margin="0,0,12,0"/>
                <Button x:Name="SaveButton" 
                        Content="Save" 
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
